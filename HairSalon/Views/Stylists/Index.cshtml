@using EauClaireSalon.Models;

<h1>Stylists</h1>
@if (@Model.Count == 0)
{
  <h3>No Stylists have been added.</h3>
}
else
{
  <ul>
  @foreach (Stylist stylist in Model)
    {
      <li>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</li>
    }
  </ul>
}
<p>@Html.ActionLink("Add a new Stylist", "Create", "Stylists")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
