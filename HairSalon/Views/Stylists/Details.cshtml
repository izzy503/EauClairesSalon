@using EauClaireSalon.Models;
@model Stylist;

<h1>Stylist Details</h1>
<dl class="row">
  <dt class="col-sm-2">Name</dt>
  <dd class="col-sm-10">@Model.Name</dd>
  <dt class="col-sm-2">Specialty</dt>
  <dd class="col-sm-10">@Model.Specialty</dd>
</dl>

<h2>Clients</h2>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var client in Model.Clients)
    {
      <tr>
        <td>@client.Name</td>
      </tr>
    }
  </tbody>
</table>

<p>
  <a asp-action="Edit" asp-route-id="@Model.StylistId">Edit</a> |
  <a asp-action="Index">Back to List</a>
</p>
