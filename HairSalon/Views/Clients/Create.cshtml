@using EauClaireSalon.Models;
@model Stylist;

<h1>Create Client</h1>
<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StylistId" class="control-label">Stylist</label>
        <select asp-for="StylistId" class="form-control">
            <option value="">Select a Stylist</option>
            @foreach (var stylist in ViewBag.Stylists)
            {
                <option value="@stylist.StylistId">@stylist.Name</option>
            }
        </select>
        <span asp-validation-for="StylistId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>
